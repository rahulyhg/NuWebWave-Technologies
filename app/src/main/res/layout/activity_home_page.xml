<?xml version="1.0" encoding="utf-8"?>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top">

            <android.support.v4.view.ViewPager
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/former_slider"
                android:layout_marginTop="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            </android.support.v4.view.ViewPager>
        </RelativeLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="200dp"
        tools:layout_editor_absoluteX="8dp">

            <Button

                android:text="Ideas"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nu_ideas"
                android:layout_weight="1"
                android:theme="@style/Nu_Buttons"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableTop="@mipmap/ic_lightbulb_outline_white_24dp"
                android:textColor="@color/White"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingTop="2dp"
                android:paddingBottom="0dp" />

            <Button

            android:text="Design"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nu_design"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:theme="@style/Nu_Buttons"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/White"
            android:drawableTop="@mipmap/ic_layers_white_24dp"


                android:paddingTop="2dp"
                android:paddingBottom="0dp" />
        <Button

            android:text="Build"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nu_build"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:theme="@style/Nu_Buttons"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/White"
            android:drawableTop="@mipmap/ic_extension_white_24dp"


            android:paddingTop="2dp"
            android:paddingBottom="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="1"
        android:background="@color/White"
        tools:layout_editor_absoluteY="261dp"
        tools:layout_editor_absoluteX="0dp">

        <WebView
            android:text="What We Do"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/wwd"
            android:layout_weight="0.82"
            android:textIsSelectable="false"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

           />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="381dp"
        tools:layout_editor_absoluteX="0dp"
        android:elevation="1dp">

        <Button

            android:text="HTML"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nu_html"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:theme="@style/Nu_Buttons"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/White"
            android:drawableTop="@mipmap/ic_code_white_24dp"


            android:paddingBottom="0dp"
            android:paddingTop="2dp" />

        <Button
            android:text="SEO"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/nu_seo"
            android:layout_weight="1"
            android:theme="@style/Nu_Buttons"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/White"
            android:drawableTop="@mipmap/creation"

            android:paddingBottom="0dp"
            android:paddingTop="2dp" />

        <Button
            android:text="SUPPORT"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nu_support"
            android:layout_weight="1"
            android:theme="@style/Nu_Buttons"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/White"
            android:drawableTop="@mipmap/ic_add_circle_white_24dp"

            android:paddingBottom="0dp"
            android:paddingTop="2dp" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="441dp"
        tools:layout_editor_absoluteX="0dp">

        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:id="@+id/why_us"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>


</LinearLayout>

